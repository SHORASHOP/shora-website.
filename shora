import React from 'react'
import { createRoot } from 'react-dom/client'
import App from './App'
import './styles.css'

createRoot(document.getElementById('root')).render(<App />)
import React, { useState } from 'react';

const productsSeed = [
  { id: 'p1', title: 'Equinox Chrono Watch', price: 249, img: '/assets/product1.jpg' },
  { id: 'p2', title: 'Shora Luxe Bag', price: 179, img: '/assets/product2.jpg' }
];

export default function App(){
  const [products] = useState(productsSeed);
  const [cart, setCart] = useState({});
  const [route, setRoute] = useState('home');

  function addToCart(id, qty=1){
    setCart(c=> ({...c, [id]: (c[id]||0)+qty}));
    alert('Added to cart');
  }

  function renderHeader(){
    return (
      <div className="header container">
        <div className="logo">
          <img src="/assets/logo.png" alt="Shora logo" />
          <div>
            <div style={{fontWeight:700}}>SHORA</div>
            <div style={{fontSize:12, color:'#0B69FF'}}>Shora — Luxury Aura</div>
          </div>
        </div>
        <div>
          <button className="btn" onClick={()=>setRoute('shop')}>Shop</button>
        </div>
      </div>
    )
  }

  return (
    <div>
      {renderHeader()}
      <div className="container">
        {route==='home' && (
          <>
            <div className="hero card">
              <video autoPlay muted loop>
                <source src="/assets/hero1.mp4" type="video/mp4" />
                <source src="/assets/hero2.mp4" type="video/mp4" />
                <source src="/assets/hero3.mp4" type="video/mp4" />
              </video>
            </div>

            <h2>Featured Products</h2>
            <div className="grid products">
              {products.map(p=>(
                <div key={p.id} className="card">
                  <img src={p.img} alt={p.title} />
                  <div style={{marginTop:8, fontWeight:600}}>{p.title}</div>
                  <div style={{color:'#475569'}}>${p.price}</div>
                  <div style={{marginTop:8}}>
                    <button className="btn" onClick={()=>addToCart(p.id)}>Add to cart</button>
                  </div>
                </div>
              ))}
            </div>
          </>
        )}

        {route==='shop' && (
          <>
            <h2>Shop</h2>
            <div className="grid products">
              {products.map(p=>(
                <div key={p.id} className="card">
                  <img src={p.img} alt={p.title} />
                  <div style={{marginTop:8, fontWeight:600}}>{p.title}</div>
                  <div style={{color:'#475569'}}>${p.price}</div>
                  <div style={{marginTop:8}}>
                    <button className="btn" onClick={()=>addToCart(p.id)}>Add to cart</button>
                  </div>
                </div>
              ))}
            </div>
          </>
        )}
      </div>
    </div>
  )
}
* { box-sizing: border-box; font-family: Inter, system-ui, Arial, sans-serif; }
